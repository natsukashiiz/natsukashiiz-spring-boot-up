<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.natsukashiiz.iiserverapi.mapper.BookmarkMapper">
    <resultMap id="outerResultMap" type="com.natsukashiiz.iiserverapi.entity.IIBookmark">
        <id property="id" column="id"/>
        <collection property="blog" ofType="com.natsukashiiz.iiserverapi.entity.IIBlog" resultMap="innerResultMap"/>
    </resultMap>
    <resultMap id="innerResultMap" type="com.natsukashiiz.iiserverapi.entity.IIBlog">
        <id property="id" column="blog_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="publish" column="publish"/>
        <result property="cdt" column="cdt"/>
        <result property="uid" column="uid"/>
        <result property="uname" column="uname"/>
        <result property="avatar" column="avatar"/>
        <result property="category" column="category"/>
        <result property="bookmark" column="bookmark"/>
    </resultMap>

    <select id="findByUid" resultMap="outerResultMap">
        SELECT bm.id,
               b.id       AS blog_id,
               b.title,
               b.content,
               b.publish,
               b.cdt,
               b.uid,
               u.username AS uname,
               u.avatar,
               c.name     AS category,
               IFNULL((bm.uid = #{uid}), false) AS bookmark
        FROM ii_bookmarks bm
                 INNER JOIN ii_blogs b ON bm.blog_id = b.id
                 INNER JOIN ii_categories c ON c.id = b.category_id
                 INNER JOIN ii_users u ON b.uid = u.id
        WHERE bm.uid = #{uid}
        ORDER BY bm.id DESC
    </select>
    <select id="hasBlogIdAndUid" resultType="java.lang.Boolean">
        SELECT COUNT(*) FROM ii_bookmarks WHERE blog_id = #{blogId} AND uid = #{uid}
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO ii_bookmarks(blog_id, uid) VALUES(#{blogId}, #{uid})
    </insert>
    <delete id="remove">
        DELETE FROM ii_bookmarks WHERE blog_id = #{blogId} AND uid = #{uid}
    </delete>
</mapper>
